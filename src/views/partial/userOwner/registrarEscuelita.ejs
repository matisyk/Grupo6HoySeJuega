<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Escuelita</title>

    <!--CSS PROPIOS-->
    <link rel="stylesheet" href="/css/registrarCancha.css">
    <link rel="stylesheet" href="/css/reservarCancha.css">
    <link rel="stylesheet" href="/css/globalForm.css">
    <!-- CSS EXTERNOS -->
    <link
        href="https://fonts.googleapis.com/css2?family=Bangers&family=Bebas+Neue&family=Kalam&family=Roboto&display=swap"
        rel="stylesheet">
        <%- include('../css-externos') %>
</head>

<body>
    <%- include('./headerOwner.ejs') %>

    <form action="/userOwner/vistaCancha/<%= userOwnerLogged.id %>/registrarEscuelita/" enctype="multipart/form-data"
        method="POST">
        <div class="tarjeta">
            <div class="item-tarjeta">
                <h4 style="text-align: center"> Registrar escuelita</h4>
                <br>
                    <label>Deporte:</label>
                    <select class="form-control" id="deporte" name="deporte">
                        <option value="" disabled selected>Elegir deporte: </option>
                        <% deportes.forEach( deportes => { %>
                            <option value="<%= deportes.id %>"><%= deportes.deporte %></option>
                            <% }) %> 
                    </select>
             
            </div>
            <div style="display:none">
                <select name="category">
                    <option value="escuelita">escuelita</option>
                </select>
            </div>
            <div class="edad">

                <div class="item-tarjeta">
                    <label>Cantidad de alumnos:</label>
                    <input type="number" name="alumnos" id="alumnos"
                        placeholder="Cantidad de alumnos que se pueden inscribir">
                </div>

                <div class="edad">
                    <div class="item-tarjeta">
                        <label name="categoria">Categoría</label>
                        <input type="number" name="categoria" id="categoria" placeholder="Categoria por año de los alumnos">
                    </div>

                    <div class="item-tarjeta">
                        <label >Nombre profesor: </label>
                        <input type="text" placeholder="Nombre del profesor" name="nprofesor" id="nprofesor">
                    </div>
                     <div class="item-tarjeta">
                         <label >Apellido profesor: </label>
                         <input type="text" placeholder="Apellido del profesor" name="aprofesor" id="aprofesor">
                     </div>

                    <div class="item-tarjeta">
                        <label>Género:</label>
                        <select class="form-control" id="genero" name="genero">
                            <option value="" disabled selected> Elegir género</option>
                            <% genero.forEach( generos => { %>
                            <option value="<%= generos.id %>"><%= generos.genero %></option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="item-tarjeta"><label>Día a realizarse:</label></div>
                    <div class="otro-item-tarjeta">
                        <select name="dia" id="dia">
                            <option value="" disabled selected> Elegir día</option>
                            <% dias.forEach( dias => { %>
                            <option value="<%= dias.id %>"><%= dias.dia %></option>
                            <% }) %>
                        </select>
                        <select name="hora" id="hora">
                            <option value="" disabled selected> Elegir horario</option>
                            <% horarios.forEach( horarios => { %>
                            <option value="<%= horarios.id %>"><%= horarios.hora %></option>
                            <% }) %>
                        </select>
                      
                    </div>
                    <div class="item-tarjeta">
                        <label name="premio">Valor mensual</label>
                        <input type="number" placeholder="El valor mensual por alumno" name="valor" id="valor">
                    </div>

                    <div class="item-tarjeta">
                        <label>Cargar imagen</label>
                        <input class="foto" type="file" name="image" accept="all" multiple>
                    </div>

                    <div class="item-tarjeta boton-enviar">
                        <button type="submit">Registrar</button>
                    </div>
                </div>
    </form>

</body>

</html>